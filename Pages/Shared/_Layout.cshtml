@using System.Net.NetworkInformation
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EncomendasProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EncomendasProject.styles.css" asp-append-version="true" />
    <script type="text/javascript" src="https://unpkg.com/@@zxing/library@latest"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.datatables.net/v/dt/dt-2.1.5/datatables.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-primary shadow-sm mb-3">
            <div class="container">
                <a class="navbar-brand text-white fw-bold fs-4" asp-area="" asp-page="/Index">EncomendasProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Client/Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Encomenda/Index">Encomendas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Worker/Index">Colaboradores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Product/Index">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Reader/Reader">Leitor QR</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <partial name="_LoginPartial" class="text-white fs-5" />
                    </div>
                </div>
            </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - EncomendasProject - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://unpkg.com/@@zxing/library@latest"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.1.5/datatables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    $(document).ready(function () {
        $('#Table-Data').DataTable({
            paging: true,
            searching: true,
            ordering: true
        });
    });
</script>